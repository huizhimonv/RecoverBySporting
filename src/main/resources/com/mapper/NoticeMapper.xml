<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.recoverbysporting.dao.NoticeDao">
    <select id="findAll" resultType="Notice">SELECT * FROM notice</select>
    <insert id="insert" >INSERT INTO notice(title,writer,content,date)
                         VALUES(#{notice.title},#{notice.writer},#{notice.content},#{notice.date}) </insert>
    <update id="update">UPDATE notice SET title=#{notice.title},writer=#{notice.writer},
                                          content=#{notice.content},date=#{notice.date}
                                          WHERE id=#{notice.id}</update>
    <delete id="delete">DELETE FROM notice WHERE id=#{id}</delete>






</mapper>