<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.recoverbysporting.dao.ReportDao">
    <select id="findForDoctor" resultType="Report">SELECT * FROM report
        <trim prefix="where" prefixOverrides="and|or">
            <if test="pid!=null and pid!=''" >
                and pid=#{pid}
            </if>
            <if test="did!=null and did!=''" >
                and did=#{did}
            </if>
        </trim>
        ORDER BY reportDate DESC
    </select>
    <select id="findForAdmin" resultType="Report">SELECT * FROM report
        <trim prefix="where" prefixOverrides="and|or">
            <if test="pid!=null and pid!=''" >
                and pid=#{pid}
            </if>
        </trim>
        ORDER BY reportDate DESC
    </select>
    <delete id="delete">DELETE FROM report WHERE id=#{id}</delete>
</mapper>